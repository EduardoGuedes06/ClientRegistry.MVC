@model PagedClientViewModel

<h2>Clientes</h2>

<!-- Formulário de Pesquisa -->
<form method="get" id="search-form" class="form-inline mb-3">
    <div class="form-group">
        <input type="text" name="search" class="form-control" placeholder="Buscar" value="@Model.Search" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<p>Resultado para: <strong>@Model.Search</strong></p>

<!-- Tabela de Clientes -->
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Type</th>
            <th>Document</th>
            <th>Register</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model.Clients)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.Phone</td>
                <td>@client.Type</td>
                <td>@client.Document</td>
                <td>@client.RegisterDateTime</td>
                <td>
                    <a href="@Url.Action("UpSert", "Client", new { id = client.Id })" class="btn btn-warning">Edit</a>
                    <form action="@Url.Action("Delete", "Client", new { id = client.Id })" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>

<!-- Paginação -->
<div class="pagination">
    @if (Model.Page > 1)
    {
        <a href="#" class="page-link" data-page="@(Model.Page - 1)">Anterior</a>
    }

    <span>Página @Model.Page de @Model.TotalPages</span>

    @if (Model.Page < Model.TotalPages)
    {
        <a href="#" class="page-link" data-page="@(Model.Page + 1)">Próximo</a>
    }
</div>
